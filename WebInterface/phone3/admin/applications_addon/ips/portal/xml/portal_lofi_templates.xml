    <template>
      <template_group>skin_portal</template_group>
      <template_content><![CDATA[{parse js_module="topic"}
<foreach loop="articles:$articles as $entry">
	<h2 class='maintitle'><a href='{parse url="showtopic={$entry['tid']}" base="public" seotitle="{$entry['title_seo']}" template="showtopic"}'>{$entry['title']}</a></h2>
	<div class='generic_bar'></div>
	<div class='post_block first hentry no_sidebar' id='announce_id_{$announce['announce_id']}'>
		<div class='post_wrap'>
			<if test="authorIsMember:|:$entry['member_id']">
				<h3>
			<else />
				<h3 class='guest'>
			</if>
					<if test="authorMemberLink:|:$entry['member_id']">
						<if test="authorIsOnline:|:$entry['_online']">
							{parse replacement="user_online"}
						<else />
							{parse replacement="user_offline"}
						</if> &nbsp;
								<address class="author vcard"><a class="url fn" href='{parse url="showuser={$entry['member_id']}" template="showuser" seotitle="{$entry['members_seo_name']}" base="public"}'>{$entry['members_display_name']}</a>{parse template="user_popup" group="global" params="$entry['member_id']"}</address>
					<else />
						{$entry['members_display_name']}
					</if>
					 - {$entry['date']} - {parse format_number="$entry['posts']"} {$this->lang->words['comments_suffix']}
				</h3>
			<div class='post_body'>
				<div class='post entry-content'>
					{$entry['post']}
					<!--IBF.ATTACHMENT_{$entry['pid']}-->
				</div>
			</div>
			<div class='moderation_bar rounded'>
				<if test="entryHasPosts:|:$entry['posts']">
					{$this->lang->words['read']} {parse format_number="$entry['views']"} {$this->lang->words['times_last']} <a href='{parse url="showtopic={$entry['tid']}&amp;view=getlastpost" base="public" seotitle="{$entry['title_seo']}" template="showtopic"}'>{$this->lang->words['article_comment']}</a> {$this->lang->words['by']} <if test="entryLastPoster:|:$entry['last_poster_id']"><a href='{parse url="showuser={$entry['last_poster_id']}" template="showuser" seotitle="{$entry['seo_last_name']}" base="public"}'>{$entry['last_poster_name']}</a><else />{$entry['last_poster_name']}</if>
				<else />
					{$this->lang->words['read']} {parse format_number="$entry['views']"} {$this->lang->words['times_make']} <a href='{parse url="showtopic={$entry['tid']}&amp;view=getlastpost" base="public" seotitle="{$entry['title_seo']}" template="showtopic"}'>{$this->lang->words['article_comment']}</a>
				</if>
				{$bottom_string}
				&nbsp;&nbsp;<a href='{parse url="app=forums&amp;module=forums&amp;section=printtopic&amp;client=printer&amp;f={$entry['forum_id']}&amp;t={$entry['tid']}" base="public"}'>{$this->lang->words['print']}</a>
				<a href='{parse url="app=forums&amp;module=extras&amp;section=forward&amp;f={$entry['forum_id']}&amp;t={$entry['tid']}" base="public"}'>{$this->lang->words['email']}</a>
			</div>
		</div>			
	</div>
	<br />
</foreach>]]></template_content>
